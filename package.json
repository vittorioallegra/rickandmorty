{
  "name": "rickandmorty",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.3.0",
    "@mui/material": "^5.3.0",
    "i18next": "^21.6.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3",
    "react-infinite-scroll-component": "^6.1.0",
    "rickmortyapi": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.21",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.0",
    "lint-staged": ">=10",
    "node-sass": "^6.0.0",
    "prettier": "^2.5.1",
    "react-scripts": "^4.0.0",
    "typescript": "4.4.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write 'src/**/*.{js,jsx,json,css,scss,md,ts,tsx}' --ignore-path ./.gitignore",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
